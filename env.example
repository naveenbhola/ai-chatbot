# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/pdf-chat

# AI Provider Configuration
# Use 'openai' (Groq, OpenAI-compatible) or 'ollama'
AI_PROVIDER=openai

# LLM via Groq (OpenAI-compatible)
OPENAI_API_KEY=your_groq_api_key
OPENAI_BASE_URL=https://api.groq.com/openai/v1
OPENAI_MODEL=meta-llama/llama-4-scout-17b-16e-instruct

# Embeddings via Ollama (no API key needed)
OLLAMA_BASE_URL=http://localhost:11434
MODEL_NAME=llama3.2:3b
EMBEDDING_MODEL=mxbai-embed-large

# Qdrant Vector DB
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=pdf_chunks
QDRANT_API_KEY=

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

