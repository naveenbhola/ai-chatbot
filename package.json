{
  "name": "pdf-chat-api",
  "version": "1.0.0",
  "description": "REST API for conversational interaction with PDF documents",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "dev:full": "concurrently \"npm run server\" \"npm run client\"",
    "install:all": "npm install && cd client && npm install"
  },
  "keywords": ["pdf", "chat", "ai", "mern", "rest-api"],
  "author": "PDF Chat API",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "openai": "^4.20.1",
    "uuid": "^9.0.0",
    "axios": "^1.5.0",
    "@qdrant/js-client-rest": "^1.9.0",
    "@dqbd/tiktoken": "^1.0.15"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}

